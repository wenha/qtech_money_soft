<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout 
        android:id="@+id/main_ly"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
    	<ImageView 
        	android:id="@+id/main_iv_people"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_launcher"
        	android:layout_marginTop="20dp"
        	/>
    	<TextView
        	android:id="@+id/main_text_info"
        	android:layout_below="@id/main_iv_people"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="20dp"
        	android:gravity="center_horizontal"
        	android:text="欢迎xxx登陆，今天为2015-12-28，你的生日" />
    </LinearLayout>
    <GridView 
        android:id="@+id/main_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_ly"
        android:numColumns="3"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="40dp"
        android:background="@drawable/left"
        android:layout_marginTop="30dp"></GridView>

</RelativeLayout>
